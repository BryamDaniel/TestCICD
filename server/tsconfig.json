{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {


    // "target": "es2020",                  /* Versión de JavaScript de salida */
    // "module": "commonjs",                /* Módulo de salida para Node */
    "outDir": "./dist",                  /* Carpeta de destino del JS compilado */
    "rootDir": "./src",                  /* Carpeta donde están los archivos .ts */
    "esModuleInterop": true,             /* Importaciones modernas */
    "forceConsistentCasingInFileNames": true,
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },

  "include": ["src/**/*"]                /* Archivos que debe compilar (Ej: todo en src) */
}
